<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Clinic">

        <!-- Màn hình đăng nhập (chạy đầu tiên) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Clinic.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.auth.ui.LoginActivity" />
        <activity android:name=".HomeActivity"/>
        <activity android:name="com.example.profile.ui.EditProfileActivity"/>
        <activity android:name="com.example.auth.ui.SignupActivity" />
        <activity android:name="com.example.auth.ui.ForgotPasswordActivity" />
        <activity android:name="com.example.auth.ui.ResetPasswordActivity" />
        <activity android:name="com.example.profile.ui.ProfileFragment" />
        <activity android:name="com.example.appointment.ui.AppointmentActivity"/>
        <activity android:name="com.example.appointment.ui.SpecialtyActivity"/>
        <activity android:name="com.example.appointment.ui.ChooseDateActivity"/>
        <activity android:name="com.example.appointment.ui.ChooseDoctorActivity"/>
        <activity android:name="com.example.appointment.ui.ExamFormActivity"/>
        <activity android:name="com.example.appointment.ui.CreateProfileActivity"/>
        <activity android:name="com.example.appointment.ui.BookingAppointmentActivity"/>
        <activity android:name="com.example.records.ui.RecordsActivity"/>
        <activity android:name="com.example.records.ui.ProfileActivity"/>
        <activity android:name="com.example.records.ui.ChooseResultActivity"/>
    </application>


</manifest>
