        android:theme="@style/Theme.Clinic">

        <!-- Màn hình đăng nhập (chạy đầu tiên) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Clinic.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <!--        module app-->
        <activity android:name=".HomeActivity"/>
        <activity android:name=".ContactActivity"/>
        <activity android:name=".CreateCareProfileActivity"/>
        <activity android:name=".BookActivity"/>
        <activity android:name=".ResetPassActivity"/>
        <activity android:name=".ExaminateActivity"/>
