<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Theme app chính -->
    <style name="Theme.Clinic" parent="Theme.Material3.Light.NoActionBar">
        <!-- Cho status bar & navigation bar trong suốt -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- (Tùy chọn) Nếu nền app sáng, icon thanh trên/dưới màu đen -->
<!--        <item name="android:windowLightStatusBar">true</item>-->
<!--        <item name="android:windowLightNavigationBar">true</item>-->
    </style>

    <!-- Theme Splash của Android 12+ -->
    <style name="Theme.Clinic.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.Clinic</item>
        <!-- Nếu muốn splash cũng trong suốt thanh trên/dưới thì có thể thêm: -->
        <!--
