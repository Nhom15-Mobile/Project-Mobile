<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- TIÊU ĐỀ -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin liên hệ"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <!-- CARD THÔNG TIN BỆNH VIỆN -->
        <!-- CARD THÔNG TIN BỆNH VIỆN -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <!-- ROOT TRONG CARD: DỌC -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- HÀNG TRÊN: LOGO + TÊN BỆNH VIỆN + SLOGAN -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgLogo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/logo_app"
                        android:background="@drawable/logo_round"
                        android:clipToOutline="true"

                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BỆNH VIỆN UIT HEALTHCARE\nTHÀNH PHỐ HỒ CHÍ MINH"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nhanh chóng - Tiện lợi - Uy tín"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- PHẦN DƯỚI: ĐỊA CHỈ, SDT, EMAIL, WEBSITE - CHẠY FULL NGANG -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Địa chỉ: Hàn Thuyên, khu phố 6 P, Thủ Đức, Thành phố Hồ Chí Minh"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SDT: 0984465718"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: bv.uit.healthcare@gm.uit.edu.vn"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website: www.bvuit.com.vn"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- NHÃN "Xem bản đồ" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Xem bản đồ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- BẢN ĐỒ (Ảnh bo góc) -->

        <!-- CSKH -->
        <ImageView
            android:id="@+id/imgMap"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_map"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/map" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="CSKH 1900 2352"
            android:textColor="#0A4BD1"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="8dp"/>
    </LinearLayout>

</ScrollView>
