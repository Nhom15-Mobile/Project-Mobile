<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#D7EBFF"
                android:endColor="#FFFFFF"
                android:angle="90" />
        </shape>
