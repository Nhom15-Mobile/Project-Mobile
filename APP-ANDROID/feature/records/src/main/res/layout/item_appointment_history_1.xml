<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D7EEFE"
        android:padding="12dp">

        <!-- Dòng 1: Tên bác sĩ + trạng thái -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BS. Nguyễn Văn A"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa khám"
                android:textSize="12sp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_status_chip"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- Dòng 2: Chuyên khoa -->
        <TextView
            android:id="@+id/tvSpecialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tim mạch"
            android:textSize="13sp"
            android:textColor="#6B7280"
            android:layout_marginTop="4dp" />

        <!-- Dòng 3: Ngày giờ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20/12/2025 • 08:30"
                android:textSize="13sp"
                android:textColor="#4B5563" />

            <TextView
                android:id="@+id/tvPaymentStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã thanh toán"
                android:textSize="12sp"
                android:textColor="#059669" />
        </LinearLayout>

        <!-- Dòng 4: Địa điểm -->
        <TextView
            android:id="@+id/tvClinic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng khám Nội tổng quát - Tầng 5"
            android:textSize="12sp"
            android:textColor="#6B7280"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
