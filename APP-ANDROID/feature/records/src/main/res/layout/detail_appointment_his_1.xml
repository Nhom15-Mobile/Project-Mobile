<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB">

    <!-- HEADER: Back + Tiêu đề -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết lịch khám"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1F57E7"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- NỘI DUNG -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="64dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- CARD 1: TỔNG QUAN LỊCH KHÁM -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="1dp"
                app:strokeColor="#D3E0F2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Trạng thái + Dịch vụ -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvService"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="TIM MẠCH"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="#111111" />

                        <TextView
                            android:id="@+id/tvStatusChip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chưa khám"
                            android:textSize="12sp"
                            android:textColor="#1F57E7"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp"
                            android:background="@drawable/bg_chip_status" />
                    </LinearLayout>

                    <!-- Ngày giờ -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_home_calen2"
                            android:tint="#7081A7" />

                        <TextView
                            android:id="@+id/tvDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="10/12/2025 • 07:30"
                            android:textSize="14sp"
                            android:textColor="#333333" />
                    </LinearLayout>

                    <!-- Hồ sơ bệnh nhân -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/user_black"
                            android:tint="#7081A7" />

                        <TextView
                            android:id="@+id/tvCareProfileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Nguyen Thi B"
                            android:textSize="14sp"
                            android:textColor="#333333" />
                    </LinearLayout>

                    <!-- Quan hệ -->
                    <TextView
                        android:id="@+id/tvRelation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Mối quan hệ: Mother"
                        android:textSize="12sp"
                        android:textColor="#7081A7" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD 2: THÔNG TIN KHÁM -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="1dp"
                app:strokeColor="#D3E0F2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin khám"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#7081A7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#E0E7F5" />

                    <TextView
                        android:id="@+id/tvDoctorName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bác sĩ: Bác sĩ A"
                        android:layout_marginTop="12dp"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/tvServiceDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chuyên khoa: TIM MẠCH"
                        android:layout_marginTop="6dp"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/tvExamDateDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày khám: 19/12/2025"
                        android:layout_marginTop="6dp"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/tvExamTimeDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giờ khám: 14:30"
                        android:layout_marginTop="6dp"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/tvCreatedAt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Đặt lúc: 02/12/2025 • 09:19"
                        android:layout_marginTop="10dp"
                        android:textSize="12sp"
                        android:textColor="#7081A7" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD 3: THANH TOÁN -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@android:color/white"
                app:strokeWidth="1dp"
                app:strokeColor="#D3E0F2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanh toán"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#7081A7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#E0E7F5" />

                    <TextView
                        android:id="@+id/tvPaymentStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trạng thái: ĐÃ THANH TOÁN"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textColor="#1F57E7"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPaymentAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số tiền: 150.000đ"
                        android:layout_marginTop="6dp"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/tvPaymentProvider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hình thức: MoMo"
                        android:layout_marginTop="6dp"
                        android:textSize="14sp"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/tvPaymentTransId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã giao dịch: 4620834776"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"
                        android:textColor="#7081A7" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
