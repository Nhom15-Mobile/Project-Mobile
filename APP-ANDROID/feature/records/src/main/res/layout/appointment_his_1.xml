<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FB">

    <!-- Custom Toolbar -->
    <LinearLayout
        android:id="@+id/headerHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="20dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:backgroundTint="@color/white"
        app:icon="@drawable/ic_arrow"
        app:iconGravity="textStart"
        app:iconTint="@color/primary" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitleHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lịch sử đặt khám"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginStart="10dp" />
</LinearLayout>

    <!-- Tab: Chưa khám / Đã khám / Đã huỷ -->
<com.google.android.material.tabs.TabLayout
android:id="@+id/tabHistory"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:background="@android:color/white"
app:tabIndicatorColor="@color/primary"
app:tabIndicatorHeight="3dp"
app:tabTextColor="#A0A4B8"
app:tabSelectedTextColor="@color/primary"
app:layout_constraintTop_toBottomOf="@id/headerHistory"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    <!-- ViewPager2 -->
<androidx.viewpager2.widget.ViewPager2
android:id="@+id/viewPagerHistory"
android:layout_width="0dp"
android:layout_height="0dp"
app:layout_constraintTop_toBottomOf="@id/tabHistory"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
