<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Guideline chia màn hình -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/g20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20" />

    <!-- Block trên -->
    <View
        android:id="@+id/topBlock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#C4EBFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/g20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cá nhân"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="35dp"
        app:layout_constraintTop_toTopOf="@id/topBlock"
        app:layout_constraintBottom_toBottomOf="@id/topBlock"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Block dưới -->
    <View
        android:id="@+id/bottomBlock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/g20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Avatar -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/avatar"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/avatar"
        app:layout_constraintTop_toTopOf="@id/g20"
        app:layout_constraintBottom_toBottomOf="@id/g20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Frame chứa nội dung -->
    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/bottomBlock"
        app:layout_constraintBottom_toBottomOf="@id/bottomBlock"
        app:layout_constraintStart_toStartOf="@id/bottomBlock"
        app:layout_constraintEnd_toEndOf="@id/bottomBlock">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="60dp"
            android:gravity="top">

            <!-- ==================== TÀI KHOẢN ==================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"/>

            <!-- Chỉnh sửa thông tin -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rowEditProfile"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E7F6FF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/user_black"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Chỉnh sửa thông tin cá nhân"
                        android:textSize="16sp"
                        android:textColor="#111111"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/see_more"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Hồ sơ khám bệnh -->


            <!-- ==================== HỖ TRỢ ==================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hỗ trợ"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"/>



            <!-- Bảo mật & quyền riêng tư -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:id="@+id/rowSeAndPri"
                app:cardBackgroundColor="#E7F6FF"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/privacy"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Bảo mật và quyền riêng tư"
                        android:textSize="16sp"
                        android:textColor="#111111"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/see_more"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Giới thiệu ứng dụng -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E7F6FF"
                android:id="@+id/rowAboutApp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/infor"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Giới thiệu ứng dụng"
                        android:textSize="16sp"
                        android:textColor="#111111"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/see_more"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ==================== ĐĂNG XUẤT ==================== -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rowLogout"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="80dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#C4EBFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/logout"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Đăng xuất"
                        android:textStyle="bold"
                        android:textColor="#E34A4A"
                        android:textSize="16sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
