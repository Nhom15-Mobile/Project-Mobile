<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/bg_wave_second"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="20dp">

        <!-- Header (thấp xuống ~20dp giống layout chỉnh sửa hồ sơ) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Giới thiệu ứng dụng"
                android:textColor="#1F57E7"
                android:textStyle="bold"
                android:textSize="24sp" />

        </LinearLayout>


        <!-- Card nội dung chính -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/contentCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Tiêu đề -->
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giới thiệu ứng dụng"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:textColor="#111111"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ứng dụng đặt lịch khám và quản lý sức khoẻ tiện lợi cho người dùng."
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="16dp"/>

                    <!-- Phần: Mục đích -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mục đích ứng dụng"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111111"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvPurpose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hỗ trợ người bệnh đặt lịch khám, theo dõi lịch sử khám bệnh, giảm thời gian chờ đợi tại bệnh viện."
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="16dp"/>

                    <!-- Phần: Tính năng chính -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tính năng chính"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111111"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Đặt lịch khám theo chuyên khoa, bác sĩ, khung giờ."
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Quản lý danh sách lịch khám đã đặt."
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="• Xem lịch sử khám bệnh và thông tin hồ sơ sức khỏe."
                            android:textSize="14sp"
                            android:textColor="#444444"
                            android:layout_marginBottom="4dp"/>

                    </LinearLayout>

                    <!-- Phần: Được phát triển bởi nhóm sinh viên UIT -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đơn vị phát triển"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111111"
                        android:layout_marginBottom="4dp"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F7FCFF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp">

                            <!-- tự tạo icon team -->
                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/logo_app"
                                />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nhóm phát triển"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#111111"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="Ứng dụng được xây dựng bởi nhóm sinh viên Trường Đại học Công nghệ Thông tin (UIT) – ĐHQG TP.HCM, trong khuôn khổ đồ án môn học."
                                    android:textSize="13sp"
                                    android:textColor="#444444"/>
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Phần: Phiên bản & thông tin thêm -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phiên bản"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111111"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tvVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phiên bản: 1.0.0"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tvContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mọi góp ý và phản hồi xin gửi về: support@example.com"
                        android:textSize="14sp"
                        android:textColor="#444444"/>

                </LinearLayout>

            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
