<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Bo góc -->
    <corners android:radius="12dp" />

    <!-- Nền mặc định (xanh nhạt) – bạn có thể đổi khi set màu runtime -->
    <solid android:color="#E5EEFF" />

    <!-- Viền -->
    <stroke
        android:width="1dp"
        android:color="#AFC7F7" />

    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="4dp" />
</shape>
